@page "/listRoomType"
@using MotelManagement.Data.Models
@model MotelManagement.Pages.admin.ListRoomTypeModel
@{
}

<div class="page-head">
    <div class="container">
        <div class="row">
            <div class="page-head-content">
                <h1 class="page-title">Các loại dịch vụ phòng</h1>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card card-table">
            <div class="card-body booking_card" style="width:70%;margin:0 auto; margin-top: 50px; margin-bottom: 50px">
                <div class="table-responsive">
                    <table class="table table-stripped table table-hover table-center mb-0">
                        <thead>
                            <tr>
                                <th>Mã số</th>
                                <th>Tên loại phòng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (RoomType room in (List<RoomType>)@ViewData["roomsType"])
                            {
                                <tr>
                                    <td>@room.RoomTypeId</td>
                                    <td>@room.Name</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>